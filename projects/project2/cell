

class Cell():

    def __init__(self, life: bool = False, firstIndex: int = 0):
        self.alive = life
        self.value = 0 #firstIndex + 1
    
    def __setlife__(self, living: bool):
        self.alive = living

    def __setvalue__(self, number: int):
        self.value = number

    def __getlife__(self):
        return self.alive
    
    def __getvalue__(self):
        return self.value
    
    def __repr__(self):
        if(self.alive):
            return "X"
        else: return " "
